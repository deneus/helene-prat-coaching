{
  "version": 2,
  "buildCommand": "cd html && composer install --no-dev --optimize-autoloader",
  "functions": {
    "api/index.php":      { "runtime": "vercel-php@0.7.2" },
    "api/send-email.php": { "runtime": "vercel-php@0.7.2" },
    "api/privacy.php":    { "runtime": "vercel-php@0.7.2" }
  },
  "routes": [
    { "src": "/send-email(\\.php)?", "dest": "/api/send-email.php" },
    { "src": "/privacy(\\.php)?",    "dest": "/api/privacy.php" },
    { "src": "/(css|js|images|i18n)/(.*)", "dest": "/html/$1/$2" },
    { "src": "/",                    "dest": "/api/index.php" }
  ]
}
